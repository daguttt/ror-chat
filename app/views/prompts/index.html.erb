<main class="container mx-auto p-4 main-min-h">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <div class="flex justify-between items-center mb-4">
    <h2 class="font-bold text-4xl">Todos tus Prompts</h1>
    <%= link_to "Nuevo prompt", new_prompt_path, class: "btn btn-primary" %>
  </div>

  <div id="prompts" class="min-w-full grid gap-6 md:grid-cols-2 mt-4">
    <% if @prompts.any? %>
      <% @prompts.each do |prompt| %>
        <%= render "prompts/prompt_card", prompt: prompt %>
      <% end %>
    <% else %>
      <p>No prompts yet...</p>
    <% end %>
  </div>
</main>
